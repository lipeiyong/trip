<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/space_10">

        <net.lvtushiguang.trip.widget.AvatarView
            android:id="@+id/avtr_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/function_icon_manage_assistant" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/avtr_portrait"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户0001"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/space_14" />

            <TextView
                android:id="@+id/tv_sender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-26 09:52"
                android:textColor="?attr/infoTextColor"
                android:textSize="@dimen/space_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="?attr/attention_text_color"
                android:textSize="@dimen/space_14" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:src="@drawable/list_cell_delete" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:text="中国'改名最成功'的旅游城市，改名后游客增加1万倍不止"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/space_14" />

    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="@dimen/space_10">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/video_cover" />

        <net.lvtushiguang.trip.widget.VideoPlayView
            android:id="@+id/video_play_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/selector_icon_video_play" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:text="13.3万播放量"
        android:textColor="?attr/infoTextColor" />

    <View
        style="@style/h_line"
        android:layout_marginTop="@dimen/space_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <net.lvtushiguang.trip.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="?attr/icon_upvote"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="645"
            android:textColor="?attr/textColor"
            app:drawable_height="@dimen/space_20"
            app:drawable_location="left"
            app:drawable_width="@dimen/space_20" />

        <net.lvtushiguang.trip.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="?attr/icon_comment"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="79"
            android:textColor="?attr/textColor"
            app:drawable_height="@dimen/space_25"
            app:drawable_location="left"
            app:drawable_width="@dimen/space_25" />

        <net.lvtushiguang.trip.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="?attr/icon_forward"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:text="16"
            android:textColor="?attr/textColor"
            app:drawable_height="@dimen/space_25"
            app:drawable_location="left"
            app:drawable_width="@dimen/space_25" />

    </LinearLayout>

</LinearLayout>
